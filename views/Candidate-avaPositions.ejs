<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/normalize.css">
    <link rel="stylesheet" href="css/style.css">
    <title>Home</title>
    <link rel="shortcut icon" href="images/if_laptop_1805073.ico" type="image/x-icon">
</head>

<body>
    <!-- Header -->

    <!-- End Header -->


    <!-- Main -->
    <section>
        <div class="container">
            <div class="row justify-content-around mt-5">
                <div class="col-12 col-md-3">
                    <div class="list-group">
                        <a href="/CandidateAvaPositions"
                            class="list-group-item list-group-item-action active">Carrer</a>
                        <a href="/candidateExams" class="list-group-item list-group-item-action">Exams</a>
                    </div>
                </div>
                <div class="col-12 col-md-9">
                    <div class="carrer-content">
                        <div class="mb-5">
                            <h3>Available positions</h3>
                        </div>
                        <div class="avaPositions mt-5">
                            <% positions.forEach((position)=>{%>
                                <div class="card mb-2">
                                    <div class="card-body d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5><%=position.name%></h5>
                                        </div>
                                        <div>
                                            <% if(position.state == 'apply'){ %>
                                            <a class="btn btn-success" style="color: white" href="/applicant/<%=position.email%>/apply/<%=position.pid%>" name="applyPositionButton" id="applyPositionButton">Apply</a>
                                            <% }else if(position.state=='pending'){ %>
                                                    <b style="color: #ff7e14 ">Pending..</b>
                                            <% }else if(position.state=='approved'){ %>
                                                <b style="color:#2c44ff ">Approved</b>
                                            <% }else if(position.state=='accepted'){ %>
                                                 <b style="color:#25ff00 ">Accepted</b>
                                             <% }else { %>
                                                  <b style="color:#ff002b">Rejected</b>
                                              <% } %>

                                        </div>
                                    </div>
                                </div>
                            <% }); %>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Main -->





    <!-- Footer -->

    <!-- End Footer -->


    <script src="javascripts/bootstrap.min.js"></script>
    <script src="javascripts/jquery-3.4.1.min.js"></script>
    <script src="javascripts/script.js"></script>
</body>

</html>