<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/normalize.css">
    <link rel="stylesheet" href="css/style.css">
    <title>Home</title>
    <link rel="shortcut icon" href="images/if_laptop_1805073.ico" type="image/x-icon">
</head>

<body>
    <!-- Header -->

    <!-- End Header -->


    <!-- Main -->
    <section>
        <div class="container">
            <div class="row justify-content-around mt-5">
                <div class="col-12 col-md-3">
                    <div class="list-group">
                        <a href="/hr-dashboard" class="list-group-item list-group-item-action">Applications</a>
                        <a href="/hrExams" class="list-group-item list-group-item-action active">Exams</a>
                        <a href="/hrCandidates" class="list-group-item list-group-item-action">Candidates</a>
                    </div>
                </div>
                <div class="col-12 col-md-9">
                    <div class="hrExams-content">
                        <div class="mb-5">
                            <h3>Exams</h3>
                        </div>
                        <div class="row ml-3">
                            <div class="col-2">
                                <form action="/hrAddExam">
                                    <input type="submit" name="addExamButton" id="addExamButton" value="+ Exam">
                                </form>
                            </div>
                            <div class="exam-search col-10">
                                <input type="text" name="searchExamInput" id="searchExamInput"
                                    placeholder="Search exam type and name">
                                <button type="submit" name="searchExamButton" id="searchExamButton">Search</button>
                            </div>

                        </div>

                        <div class="manageExams mt-5 p-2">
                            <div class="filterbydate text-right">
                                <label for="examfilterdate">Date:</label>
                                <input type="date" name="examFilterDate" id="examFilterDate">
                            </div>
                            <% exams.forEach((exam)=>{ %>
                                <div class="card mb-2">

                                    <div class="card-body d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5> <a href="/editExam" class="text-decoration-none"> <%= exam.name %> </a> </h5>
                                            <div class="small ml-2 text-muted font-italic">
                                                <h6 id="examType"><%= exam.type %></h6>
                                            </div>
                                        </div>
                                        <div class="">
                                            <button type="button" class="close" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>

                                    </div>

                                </div>
                            <%}); %>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Main -->





    <!-- Footer -->

    <!-- End Footer -->


    <script src="javascripts/bootstrap.min.js"></script>
    <script src="javascripts/jquery-3.4.1.min.js"></script>
    <script src="javascripts/script.js"></script>
</body>

</html>