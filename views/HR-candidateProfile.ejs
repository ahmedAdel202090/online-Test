<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Home</title>
    <link rel="shortcut icon" href="/images/if_laptop_1805073.ico" type="image/x-icon">
</head>

<body>
<!-- Header -->

<!-- End Header -->


<!-- Main -->
<section>
    <div class="container">
        <div class="row justify-content-around mt-5">
            <div class="col-12 col-md-3">
                <div class="list-group">
                    <a href="/hrApplicants" class="list-group-item list-group-item-action">Applications</a>
                    <a href="/hrExams" class="list-group-item list-group-item-action">Exams</a>
                    <a href="/hrCandidates" class="list-group-item list-group-item-action">Candidates</a>
                </div>
            </div>
            <div class="col-12 col-md-9 mt-5">
                <div class="candidateProfile-content">
                    <div class="card mb-2">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h5 id="candidateTitle"> <%= identity.name %> </h5>
                                <div class="small ml-2 text-muted font-italic">
                                    <h6 id="candidatePosition"><%= identity.position %></h6>
                                </div>
                            </div>
                            <div class="mr-5 d-flex justify-content-between align-items-center">

                                <div class="candidate-numOFExams mr-5 text-center">
                                    <div class="numOFExams"><%= total_results.total_skipped %></div>
                                    <span> total skipped</span>
                                </div>

                                <div class="candidate-numOFExams mr-5 text-center">
                                    <div class="numOFExams"><%= total_results.total_solved %></div>
                                    <span> total solved</span>
                                </div>

                                <div class="candidate-numOFExams mr-5 text-center">
                                    <div class="numOFExams"><%= total_results.total_marked %></div>
                                    <span> total marked</span>
                                </div>

                                <div class="candidate-numOFExams mr-3 text-center">
                                    <form action="/acceptCand" method="post">
                                        <input type="hidden" name="email" value=<%= identity.email %> >
                                        <input type="submit" class="btn btn-success" value="Accepted">
                                    </form>
                                </div>

                                <div class="candidate-numOFExams mr-3 text-center">
                                    <form action="/unacceptCand" method="post">
                                        <input type="hidden" name="email" value=<%= identity.email %> >
                                        <input type="submit" class="btn btn-danger" value="UnAccepted">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="candidate-examsList mt-5">
                        <div class="mb-3">
                            <h4>Exams history</h4>
                        </div>
                        <div class="mb-3">
                            <input type="text" name="assignExamInput" id="assignExamInput" class="col-8" placeholder="">
                            <button type="submit" name="assignExamButton" id="assignExamButton">Assign exam</button>
                        </div>
                        <div class="list-group">
                            <% exams.forEach((exam)=>{ %>
                                <a href="/hrCandidateExamPage" class="list-group-item list-group-item-action">
                                    <div class="d-flex justify-content-between">
                                        <div class="examTitle"><%= exam.type %></div>
                                        <div class="candidate-numOFExams mr-5 text-center"
                                             style="margin-right: 10px !important;">
                                            <div class="numOFExams"><%= exam.skipped %></div>
                                            <span> skipped </span>
                                        </div>
                                        <div class="candidate-numOFExams mr-5 text-center"
                                             style="margin-right: 10px !important;">
                                            <div class="numOFExams"><%= exam.solved %></div>
                                            <span> solved </span>
                                        </div>
                                        <div class="candidate-numOFExams mr-5 text-center"
                                             style="margin-right: 10px !important;">
                                            <div class="numOFExams"><%= exam.marked %></div>
                                            <span> marked </span>
                                        </div>
                                    </div>
                                </a>
                            <% }); %>
                        </div>

                    </div>
                </div>
            </div>


        </div>
    </div>
</section>
<!-- End Main -->


<!-- Footer -->

<!-- End Footer -->


<script src="/javascripts/bootstrap.min.js"></script>
<script src="/javascripts/jquery-3.4.1.min.js"></script>
<script src="/javascripts/script.js"></script>
</body>

</html>