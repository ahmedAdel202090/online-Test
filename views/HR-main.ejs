<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/normalize.css">
    <link rel="stylesheet" href="css/style.css">
    <title>Home</title>
    <link rel="shortcut icon" href="images/if_laptop_1805073.ico" type="image/x-icon">
</head>

<body>
    <!-- Header -->

    <!-- End Header -->


    <!-- Main -->
    <section>
        <div class="container">
            <div class="row justify-content-around mt-5">
                <div class="col-12 col-md-3">
                    <div class="list-group">
                        <a href="/hrApplicants" class="list-group-item list-group-item-action active">Applications</a>
                        <a href="/hrExams" class="list-group-item list-group-item-action">Exams</a>
                        <a href="/hrCandidates" class="list-group-item list-group-item-action">Candidates</a>
                    </div>
                </div>
                <div class="col-12 col-md-9">
                    <div class="carrer-content">
                        <div class="mb-5">
                            <h3>Available positions</h3>
                        </div>
                        <div class="addPosition">
                            <div class="">
                                <form action="/addPosition" method="post">
                                    <input type="text" name="name" id="addPostionInput"
                                           placeholder="Add position">
                                    <button type="submit" name="addPostionButton" id="addPostionButton">Add</button>
                                </form>
                            </div>
                        </div>
                        <div class="managePositions mt-4 p-2">
                            <ul class="list-group w-50">
                                <% positions.forEach((position)=>{ %>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <div>
                                            <%= position.name %>
                                        </div>
                                        <div>
                                            <button type="button" class="close" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                    </li>
                                <% }); %>

                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-9 offset-md-3 mt-5">
                    <div class="positions-content">
                        <div class="mb-5">
                            <h3>Applications</h3>
                        </div>
                        <% pendings.forEach((applicant)=>{ %>
                            <div class="manageApplicants mt-5 p-2">
                                <div class="card mb-2">
                                    <div class="card-body d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5><%= applicant.name %></h5>
                                        </div>
                                        <div class="">
                                            <p><%= applicant.email %></p>
                                        </div>
                                        <div class="">
                                            <p><%= applicant.position %></p>
                                        </div>

                                        <div class="">
                                            <a class="btn btn-info" href="/applicant/<%= applicant.email %>/cv" name="showCV" id="showCV">CV</a>
                                        </div>

                                        <div>
                                            <a class="btn btn-success" href="/applicant/<%= applicant.email %>/approve" type="submit" name="approveCandidate" id="approveCandidate">Approve</a>
                                            <a class="btn btn-danger" href="/applicant/<%= applicant.email %>/disapprove" type="submit" name="disapproveCandidate"
                                                    id="disapproveCandidate">Disapprove</a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        <% }) %>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Main -->





    <!-- Footer -->

    <!-- End Footer -->


    <script src="javascripts/bootstrap.min.js"></script>
    <script src="javascripts/jquery-3.4.1.min.js"></script>
    <script src="javascripts/script.js"></script>
</body>

</html>